            <if test="groupAllocateTime != null">group_allocate_time,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="orderStatus != null and orderStatus != ''">order_status,</if>
            <if test="allocateTime != null">allocate_time,</if>
